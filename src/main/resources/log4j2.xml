<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Standard console for non-PUnit logs -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <!-- Yellow console for PUnit output (INFO level) -->
        <!-- WARN level uses bright yellow bold for visibility -->
        <Console name="PUnitConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%msg%n}{INFO=yellow, WARN=bright_yellow bold, ERROR=red bold}"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- PUnit reporter - yellow output, doesn't propagate to root -->
        <Logger name="org.javai.punit.reporting.PUnitReporter" level="info" additivity="false">
            <AppenderRef ref="PUnitConsole"/>
        </Logger>
        
        <!-- Everything else goes to standard console -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
